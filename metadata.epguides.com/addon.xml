<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="metadata.epguides.com"
       name="Epguides.com"
       version="0.1.0"
       provider-name="takoi">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
  </requires>
  <extension point="xbmc.metadata.scraper.tvshows"
             language="multi"
             library="epguides.xml"
             cachepersistence="00:15"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Fetch TV show metadata from epguides.com</summary>
    <description lang="en">Epguides.com contains episode lists for over 6000 TV shows. Episode data are provided by TVRage.com, series data and fanart by TheTVDB.com</description>
    <platform>all</platform>
  </extension>
</addon>
