<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="metadata.music.naver.com"
       name="Naver-Music"
       version="1.0.0"
       provider-name="XBMC-Korea">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
  </requires>
  <extension point="xbmc.metadata.scraper.albums"
             language="ko"
             library="navier-music.xml"/>
  <extension point="xbmc.metadata.scraper.artists"
             language="ko"
             library="navier-music.xml"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">NAVER Music Scraper</summary>
    <summary lang="kr">네이버 음악 스크래퍼</summary>
    <description lang="en">Download music information from music.naver.com</description>
    <description lang="kr">music.naver.com 에서 음악 정보 다운로드</description>
  </extension>
</addon>
