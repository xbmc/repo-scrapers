<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="metadata.artists.yoyo.pl"
       name="YoYo.pl"
       version="1.0.2"
       provider-name="smuto">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
    <import addon="metadata.common.last.fm" version="1.0"/>
    <import addon="metadata.common.allmusic.com" version="1.0"/>
    <import addon="metadata.common.htbackdrops.com" version="1.0"/>
  </requires>
  <extension point="xbmc.metadata.scraper.artists"
             language="pl"
             library="yoyo.xml"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">YoYo artist scraper</summary>
    <summary lang="hu">YoYo előadó információk</summary>
    <summary lang="pl">YoYo Artysta scraper</summary>
    <description lang="en">MusicBrainz scraper. Also uses info from last.fm and allmusic.com</description>
    <description lang="hu">Előadó információk letöltése a MusicBrainz, last.fm és az allmusic.com webhelyekről</description>
    <description lang="pl">YoYo scraper - wyszukiwanie na bazie MusicBrainz, biografia z last.fm,  dyskografia z MusicBrainz, generalne info z allmusic, fanart z htbackdrops (domyślnie) - w przeciwnym wypadku dostęp do zdjęć na lastfm</description>
    <platform>all</platform>
  </extension>
</addon>
