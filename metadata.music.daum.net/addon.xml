<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="metadata.music.daum.net"
       name="Daum-Music"
       version="1.0.0"
       provider-name="XBMC-Korea">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
  </requires>
  <extension point="xbmc.metadata.scraper.albums"
             language="ko"
             library="daum-music.xml"/>
  <extension point="xbmc.metadata.scraper.artists"
             language="ko"
             library="daum-music.xml"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Daum Music Scraper</summary>
    <summary lang="kr">다음 음악 스크래퍼</summary>
    <description lang="en">Download music information from music.daum.net</description>
    <description lang="kr">music.daum.net 에서 음악 정보 다운로드</description>
  </extension>
</addon>
